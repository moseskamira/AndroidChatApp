<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:padding="8dp"
        tools:context=".myChat.mainPage.ChatActivity">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/main_page_buttons"
            android:baselineAligned="false"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player"
                android:id="@+id/audio_player_button"
                android:layout_marginTop="0dp"
                android:background="@color/colorButtons"
                android:layout_alignParentTop="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chats"
                android:id="@+id/find_user_button"
                android:layout_marginTop="0dp"
                android:background="@color/colorButtons"
                android:layout_toEndOf="@+id/audio_player_button"
                android:layout_alignParentTop="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/songs"
                android:id="@+id/songs_button"
                android:background="@color/colorButtons"
                android:layout_toEndOf="@+id/find_user_button"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:id="@+id/log_out_button"
                android:background="@color/colorButtons"
                android:layout_toEndOf="@+id/songs_button"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/chat_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/main_page_buttons">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>